<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.develop.filhan.eencyclopediaone.DetailItem">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="25dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/DetailItemGambar"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/iconex"
            android:padding="10dp"/>
        <TextView
            android:id="@+id/DetailItemJudul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="JUDUL_"
            android:textSize="24sp"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/DetailItemDeskripsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_margin="10dp"
            android:text="Deskripsi"
            android:textSize="16sp"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:layout_marginLeft="10dp"
            android:text="Karakteristik"/>
        <TextView
            android:id="@+id/DetailItemKarakteristik"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="#Karakteristik"/>
        <TextView
            android:id="@+id/DetailItemDaerah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_marginLeft="10dp"
            android:text="NAMA_DAERAH"/>
        <ImageView
            android:id="@+id/DetailItemGmbrDaerah"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:padding="10dp"
            android:text="Deskripsi"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_marginLeft="10dp"
            android:text="Dimana bisa didapatkan?"/>
        <TextView
            android:id="@+id/DetailItemDidapatkan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="#DaftarTempat"/>

        <Button
            android:id="@+id/btnDetailItemBecomeSeller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Saya jual item ini"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"/>
    </LinearLayout>
    
</ScrollView>
